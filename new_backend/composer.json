{
    "name": "fitness/api-backend",
    "description": "PHP Backend Framework for Fitness Application with RESTful APIs",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "./"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "start": "php -S localhost:9999 index.php",
        "db:init": "mysql -u root -p < database/schema.sql"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 0
    }
}
